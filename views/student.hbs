<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />
        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" type="email" name="email" value="{{viewData.student.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" type="text" name="addressStreet" value="{{viewData.student.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-6"> 
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" type="text" name="addressCity" value="{{viewData.student.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" type="text" name="addressProvince" value="{{viewData.student.addressProvince}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>TA:</label>
                            <input type="checkbox" name="TA" {{#if viewData.student.TA}}checked{{/if}} />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Status:</label>
                            <input type="radio" name="status" value="Full Time" {{#equal viewData.student.status "Full Time"}}checked{{/equal}}> Full Time
                            <input type="radio" name="status" value="Part Time" {{#equal viewData.student.status "Part Time"}}checked{{/equal}}> Part Time
                        </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Course:</label>
                            {{#if viewData.courses}}
                                <select class="form-control" name="course" id="course">
                                    <option value="">Select Course</option>
                                    {{#each viewData.courses}}
                                        <option value="{{this.courseId}}" {{#if this.selected}}selected{{/if}}>{{this.courseCode}}</option>
                                    {{/each}}
                                </select>
                            {{else}}
                                <div>No Courses</div>
                            {{/if}}
                            </select>
                        </div>
                </div>
            </fieldset>
            
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" />
            <br /><br /><br />
        </form>
    </main>
</div>